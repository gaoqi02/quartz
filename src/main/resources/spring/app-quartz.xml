<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	<!--       quartz调度器        -->
	<bean class="org.springframework.scheduling.quartz.SchedulerFactoryBean" lazy-init="false">
		<property name="configLocation" value="classpath:quartz.properties" />
		<property name="jobFactory" ref="jobFactory" />

		<property name="globalJobListeners">
			<list>
				<ref bean="jobTrackListener"/>
			</list>
		</property>
		<property name="globalTriggerListeners">
			<list>
				<ref bean="triggerTrackListener"/>
			</list>
		</property>
	</bean>

	<!--       作业工厂      -->
	<bean id="jobFactory" class="com.sohu.rc.core.factory.JobFactory"></bean>

	<!--       监听器        -->
	<bean id="jobTrackListener" class="com.sohu.rc.core.listener.JobTrackingListener" />
	<bean id="triggerTrackListener" class="com.sohu.rc.core.listener.TriggerTrackingListener" />
</beans>
